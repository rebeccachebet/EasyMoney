extends layout.pug

block content
    div.row.justify-content-center
        
        div.col-md-5
            div.card-body.border
                header.card-header
                    h4.card-title.text-center.pt-1 Group Member Registration
                      
                        

                article.card-body
                form(method="POST" action="/memberregistration" )
                    div.form-row
                        div.col.form-group
                            label First name
                            input.form-control( name="firstname")
                    
                        div.col.form-group
                            label Last name
                            input.form-control( name="lastname")
                        div.col.form-group
                            label User name
                            input.form-control( name="username")
                    
                    div.form-row
                        div.col.form-group
                            label Email address
                            input.form-control( name="emailaddress")
                          
                    
                    div.form-row
                        div.col.form-group
                            label.form-check.form-check-inline
                                input.form-check-input(type="radio" name="gender" value="male")
                                span.form-check-label Male
                        div.col.form-group
                            label.form-check.form-check-inline
                                input.form-check-input(type="radio" name="gender" value="female")
                                span.form-check-label Female
                  
                    
                 

                    div.form-row
                        div.col.form-group
                            label Create password
                            input.form-control(type="password" name="password")
                    div.form-row
                        div.col.form-group
                            button.btn.btn-primary.btn-block(type="submit") Register
                        
                    div.form-row
                        small.col.text-muted By clicking the 'Sign Up' button, you confirm that you accept our 
                           <br> Terms of use and Privacy Policy.

                form(action="/uploadphoto" enctype="multipart/form-data" method="POST")
                            input(type="file" name="myImage" accept="image/*")
                            input(type="submit" value="Upload Photo")
                            
                            
                                        
           
    

                
                                
                        
                